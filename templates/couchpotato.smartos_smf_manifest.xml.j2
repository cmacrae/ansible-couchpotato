<?xml version='1.0'?>
<!DOCTYPE service_bundle SYSTEM '/usr/share/lib/xml/dtd/service_bundle.dtd.1'>
<service_bundle type='manifest' name='export'>
  <service name='application/couchpotato' type='service' version='0'>
    <create_default_instance enabled='true'/>
    <single_instance/>
				<method_context>
				<method_credential user='{{ couchpotato_user_name }}' group='{{ couchpotato_group_name }}' />
			</method_context>
    <exec_method name='start' type='method' exec='/opt/local/lib/svc/method/couchpotato %m' timeout_seconds='0'/>
    <exec_method name='stop' type='method' exec='/opt/local/lib/svc/method/couchpotato %m' timeout_seconds='60'/>
    <property_group name='startd' type='framework'>
      <propval name='duration' type='astring' value='contract'/>
    </property_group>
    <stability value='Unstable'/>
    <template>
      <common_name>
        <loctext xml:lang='C'>CouchPotato server</loctext>
      </common_name>
    </template>
  </service>
</service_bundle>
